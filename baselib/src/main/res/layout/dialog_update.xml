<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_grey"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/page_margin"
        android:gravity="center"
        android:text="@string/discover_update"
        android:textColor="@color/primary_text_color"
        android:textSize="@dimen/_17sp" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/page_margin"
        android:lineSpacingExtra="@dimen/six_dp"
        android:textColor="@color/second_text_color"
        android:textSize="@dimen/_15sp" />

    <TextView
        android:id="@+id/tv_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:paddingHorizontal="@dimen/page_margin"
        android:paddingVertical="@dimen/eight_dp"
        android:text="@string/copy_link"
        android:textColor="@color/blue_primary" />

    <include layout="@layout/dialog_bottom_btns" />

</LinearLayout>

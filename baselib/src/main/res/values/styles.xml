    <!-- textvalue -->

    <!-- 轮播图 -->
    <declare-styleable name="BannerLayout">
        <attr name="itemSpace" format="integer"/>
        <attr name="centerScale" format="float"/>
        <attr name="moveSpeed" format="float"/>
        <attr name="indicatorStartMargin" format="dimension"/>
        <attr name="indicatorEndMargin" format="dimension"/>
        <attr name="indicatorTopMargin" format="dimension"/>
        <attr name="indicatorBottomMargin" format="dimension"/>
        <attr name="indicatorDefaultColor" format="color"/>
        <attr format="color" name="indicatorSelectedColor" />
        <attr name="indicatorGravity">
            <flag name="middle" value="0" />
            <flag name="start" value="1" />
            <flag name="end" value="2" />
        </attr>
    </declare-styleable>


</resources>
